# Madison County Title Plant - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# Google Cloud Configuration
# ============================================
# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=madison-county-title

# Path to service account credentials JSON file
# Download from Google Cloud Console > IAM & Admin > Service Accounts
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Google Cloud Storage bucket name
GCS_BUCKET_NAME=madison-county-title-plant

# Document AI processor configuration
DOCUMENT_AI_PROCESSOR_ID=2a9f06e7330cbb0a
DOCUMENT_AI_LOCATION=us

# ============================================
# AI Services (for Phase 2 OCR processing)
# ============================================
# OpenAI API Key (optional - for OCR error correction)
OPENAI_API_KEY=your-openai-api-key-here

# Google Gemini API Key (optional - for OCR error correction)
GEMINI_API_KEY=your-gemini-api-key-here

# Anthropic Claude API Key (optional - for OCR error correction)
CLAUDE_API_KEY=your-claude-api-key-here

# ============================================
# Local Storage Configuration
# ============================================
# Temporary download directory
TEMP_DOWNLOAD_DIR=./temp/downloads

# Checkpoint directory for resumable processing
CHECKPOINT_DIR=./checkpoints

# Log directory
LOG_DIR=./logs

# Index files directory (DuProcess Excel files)
INDEX_DIR=./madison_docs/DuProcess Indexes

# ============================================
# Scraper Configuration
# ============================================
# Maximum retry attempts for failed downloads
MAX_RETRIES=3

# Initial delay between retries (seconds)
RETRY_DELAY=1.0

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Number of concurrent downloads (for parallel processing)
CONCURRENT_DOWNLOADS=5

# Delay between requests to avoid rate limiting (seconds)
RATE_LIMIT_DELAY=0.5

# ============================================
# PDF Optimization Configuration
# ============================================
# JPEG compression quality (1-100, higher is better quality)
PDF_COMPRESSION_QUALITY=85

# Target DPI for images in PDFs
PDF_DPI=150

# ============================================
# Database Configuration (Phase 3)
# ============================================
# PostgreSQL connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/madison_title_plant